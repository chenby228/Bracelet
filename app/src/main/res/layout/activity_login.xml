<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/test2">


    <LinearLayout
        android:id="@+id/login_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/user_icon" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp">
        </LinearLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/username_et"
                android:layout_width="match_parent"
                android:background="@drawable/login_text"
                android:drawableLeft="@mipmap/user"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:hint="用户名"
                android:singleLine="true"
                android:paddingRight="15dp"/>

           <ImageButton
               android:id="@+id/close_user"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@mipmap/close"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/gray">
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password_et"
                android:background="@drawable/login_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:drawableLeft="@mipmap/password"
                android:hint="密码"
                android:singleLine="true"
                android:paddingRight="15dp"/>

            <ImageButton
                android:id="@+id/see_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/see"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/login_up"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/login_bt"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:text="登 录"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/bottom_down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="忘记密码？"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="新用户注册"
                android:textColor="@color/white"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>